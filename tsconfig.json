{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@src": ["src"],
      "@src/*": ["src/*"],
      "@utility": ["src/utilities"],
      "@utility/*": ["src/utilities/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
